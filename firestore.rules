rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only read and write their own data document
    match /users/{userId} {
      allow read, update, write: if request.auth.uid == userId;
      allow create: if request.auth.uid != null;
    }
    
    // Users can create their own offer history documents
    // and can only read their own.
    match /offer_history/{docId} {
      allow create: if request.auth.uid == request.resource.data.userId;
      allow read: if request.auth.uid == resource.data.userId;
    }

    // Users can create and read their own withdrawal requests.
    // No one should be able to update or delete them through the client.
    match /withdrawals/{docId} {
        allow create: if request.auth.uid == request.resource.data.userId;
        allow read: if request.auth.uid == resource.data.userId;
    }
  }
}
